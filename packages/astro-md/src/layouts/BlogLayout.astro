---
import { Picture } from '@astrojs/image/components'
import Layout from '~/layouts/PageLayout.astro'
import PostTags from '~/components/Tags.astro'

export interface Props {
  content: {
    title: string
    description: string
    pubDate?: string
    updatedDate?: string
    image?: string
    showRecent?: boolean
    tags?: Array<string>
  }
}

const {
  content: { title, description, pubDate, updatedDate, image, showRecent, tags },
} = Astro.props

const posts = (await Astro.glob('../pages/blog/*.{md,mdx}'))
  .sort((a, b) => new Date(b.frontmatter.pubDate).valueOf() - new Date(a.frontmatter.pubDate).valueOf())
  .filter((post) => post.frontmatter.title !== title)
  .slice(0, 5)

const meta = {
  title,
  description,
}

// 是否显示右侧最近文章
const showRightRecent = showRecent !== false
---

<Layout {meta} isBlog={true}>
  <div
    class:list={[{ 'max-w-6xl': showRightRecent, 'max-w-4xl ': !showRightRecent }, 'flex mx-auto flex-col md:flex-row']}
  >
    <section class="px-6 sm:px-6 py-8 sm:py-12 lg:py-16">
      <header>
        <h1 class="text-center text-4xl md:text-5xl font-bold leading-tighter tracking-tighter mb-4 font-heading">
          {title}
        </h1>
        {
          pubDate && (
            <div class="text-center px-4 mb-4">
              发表日期： <time>{pubDate}</time>
            </div>
          )
        }
      </header>
      <article class="container mx-auto max-w-4xl markdown-body">
        {image && <Picture src={image} alt="descriptive text" widths={[400, 900]} aspectRatio="16:9" />}
        <div class="mt-6">
          <slot />
        </div>
      </article>
      {tags?.length > 0 && <PostTags class="text-base" tags={tags} />}
    </section>
    {
      showRecent !== false && (
        <div class="md:mt-10 md:ml-6 h-full md:w-1/3 p-4 sticky top-20">
          <div class="text-gray-900 text-xl">最近文章</div>
          <ul class="mt-4">
            {posts.map(({ url, frontmatter: { title, image, pubDate } }) => (
              <li class="mt-8 flex items-center" title={title}>
                <a href={url}>
                  <Picture class="w-20" src={image} alt="descriptive text" widths={[400, 900]} aspectRatio="16:9" />
                </a>
                <div class="ml-2 flex-1">
                  <a
                    class="text-gray-900 block hover:underline overflow-hidden overflow-ellipsis h-5 hover:text-primary-600 "
                    href={url}
                  >
                    {title}
                  </a>
                  <div class="text-sm md:mt-2 font-light">发表日期：{pubDate}</div>
                </div>
              </li>
            ))}
          </ul>
        </div>
      )
    }
  </div>
</Layout>
