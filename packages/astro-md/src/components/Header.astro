---
import { Icon } from 'astro-icon'
import HeaderLink from './HeaderLink.astro'
import { SITE_TITLE } from '../config'

const basename = import.meta.env.BASE_URL
---

<header class="sticky top-0 z-40 mx-auto w-full bg-white" id="header">
  <div class="py-3 px-3 mx-auto w-full md:flex md:justify-between max-w-7xl">
    <a class="flex items-center flex-shrink-0" href="/">
      <img class="w-10 h-10 rounded-3xl" src="/public/logo.png" alt="logo" />
      <span class="ml-4 text-2xl text-gray-900 font-bold">{SITE_TITLE}</span>
    </a>
    <div class="flex items-center">
      <nav>
        <HeaderLink href={`${basename}`}>Home</HeaderLink>
        <HeaderLink href={`${basename}blog`}>Blog</HeaderLink>
        <HeaderLink href={`${basename}about`}>About</HeaderLink>
      </nav>
      <a
        href="https://github.com/liruifengv"
        target="_blank"
        class="inline-block text-gray-500 ml-6 hover:bg-gray-100 rounded-lg text-sm p-2.5"
        aria-label="liruifengv Github"
      >
        <Icon name="tabler:brand-github" class="w-5 h-5" />
      </a>
    </div>
  </div>
</header>
