---
import HeaderLink from './HeaderLink.astro'
import { SITE_TITLE } from '../config'

const basename = import.meta.env.BASE_URL
---

<header class="px-8 h-20 text-gray-500 flex items-center">
  <a class="flex items-center flex-shrink-0" href="/">
    <img src={`https://esomap-1251572801.cos.ap-beijing.myqcloud.com/ico/eso.ico`} alt="" />
    <span class="ml-4 text-2xl text-gray-900 font-bold">{SITE_TITLE}</span>
  </a>
  <nav class="flex items-center">
    <HeaderLink href={`${basename}`}>Home</HeaderLink>
    <HeaderLink href={`${basename}blog`}>Blog</HeaderLink>
    <HeaderLink href={`${basename}about`}>About</HeaderLink>
    <HeaderLink href="https://twitter.com/astrodotbuild" target="_blank">Twitter</HeaderLink>
    <HeaderLink href="https://github.com/withastro/astro" target="_blank">GitHub</HeaderLink>
  </nav>
</header>
<style>
  header {
    margin: 0em 0 2em;
  }
  h2 {
    margin: 0.5em 0;
  }
</style>
